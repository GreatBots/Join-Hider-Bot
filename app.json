{
  "name": "Join Hider Bot",
  "description": "This bot helps to delete user joined & left messages in groups.",
  "keywords": [
    "Join",
    "Join-Hider",
    "Hider"
  ],
  "website": "https://github.com/GreatBots/Join-Hider-Bot",
  "repository": "https://github.com/GreatBots/Join-Hider-Bot"
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "value": ""
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "5"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "image": "heroku/ruby",
  "addons": [
    "openredis",
    {
      "plan": "mongolab:shared-single-small",
      "as": "MONGO"
    },
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.5"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
    }
  ]
}
